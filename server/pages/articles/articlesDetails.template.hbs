<div class="jumbotron jumbotron-fluid bg-dark text-light">
	<div class="container">

		<h1><i class="{{article.iconCssClass}}"></i> {{article.articleTitle}}</h1>

		<div class="font-size-sm">
			<a href="#">{{article.firstName}} {{article.lastName}}</a>
			<span class="text-muted d-block">{{date article.updatedTimestamp}}</span>
		</div>

		<hr class="bg-secondary-darkest">

		{{#is article.authorId user.userId}}

		<span>
			<a href="/editor/ias-incidunt-labore-pariatur-q-s0xeh7" class="btn btn-sm btn-outline-secondary">
				<i class="fa fa-pencil mr-2"></i>Edit Article
			</a>
			<button class="btn btn-sm btn-outline-danger">
				<i class="fa fa-trash mr-2"></i>Delete Article
			</button>
		</span>

		{{else}}

		<button class="btn btn-sm btn-outline-secondary mr-1">
			<i class="ion-plus-round mr-2"></i>Follow {{../article.firstName}} {{../article.lastName}} <span class="counter">(10)</span>
		</button>

		<button class="btn btn-sm btn-outline-primary">
			<i class="fa fa-heart mr-2"></i>Favorite Post <span class="counter">(29)</span>
		</button>

		{{/is}}

	</div>
</div>

<div class="container page">

	<div class="row article-content">
		<div class="col-md-12">
			{{#markdown}}{{article.articleBody}}{{/markdown}}
		</div>
	</div>

</div>