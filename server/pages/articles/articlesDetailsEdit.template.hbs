<div class="container mt-3">
	<div class="row">
		<div class="col-md-10 offset-md-1 col-xs-12">

			<h1>New article</h1>

			<form action="/article/edit" method="POST">
                <input type="hidden" name="articleId" value="{{article.articleId}}">
				<div>
					<div class="form-group">
						<input id="title" name="title" type="text" value="{{article.title}}" class="form-control form-control-lg"
							placeholder="Article Title" required>
					</div>
					<div class="form-group">
						<input name="articleDescription" type="text" value="{{article.articleDescription}}"
							class="form-control" placeholder="What's this article about?" required>
					</div>
					<div class="form-group">
						<textarea name="articleBody" value="{{article.articleBody}}" class="form-control" rows="8"
							placeholder="Write your article (in markdown)" required></textarea>
					</div>
					<div class="form-group">
						<input name="iconCssClass" type="text" value="{{article.iconCssClass}}"
							class="form-control" placeholder="Icon css class" required>
					</div>

					<button class="btn btn-lg btn-primary">
						Publish Article
					</button>
				</div>
			</form>

		</div>
	</div>
</div>

<script>
	document.getElementById("title").focus();
</script>