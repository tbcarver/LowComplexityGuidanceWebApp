<div class="jumbotron jumbotron-fluid">
  <div class="container text-center">
    <h1 class="display-4">conduit</h1>
    <p class="lead">A place to share your knowledge.</p>
  </div>
</div>

<div class="container page">
  <div class="row">

    <div class="col-md-9">
      <div class="feed-toggle">
        <ul class="nav nav-tabs outline-active">
          <li class="nav-item">
            <a class="nav-link" href="">Your Feed</a>
          </li>
          <li class="nav-item">
            <a class="nav-link active" href="">Global Feed</a>
          </li>
        </ul>
      </div>

      {{#each pagedArticles.articles}}

      <div class="article-preview">
        <div class="article-meta">
          {{!-- <a href="profile.html"><img src="http://i.imgur.com/Qr71crq.jpg" /></a> --}}
          <div class="info">
            {{!-- <a href="" class="author">Eric Simons</a> --}}
            <span class="date">{{formatDate updatedTimestamp}}</span>
          </div>
          <button class="btn btn-outline-primary btn-sm pull-xs-right">
            <i class="ion-heart"></i> 29
          </button>
        </div>

        <h1><a href="/article/{{articleId}}"><i class="far fa-grimace"></i>{{articleTitle}}</a></h1>
        <p>{{articleDescription}}</p>
        <a href="/article/{{articleId}}"><span>Read more...</span></a>
      </div>

      {{/each}}



      <core-pagination pagination-data="{{stringify pagedArticles.pagination}}"></core-pagination>

    </div>

    <div class="col-md-3">
      <div class="sidebar">
        <p>Popular Tags</p>

        <div class="tag-list">
          <a href="" class="tag-pill tag-default">programming</a>
          <a href="" class="tag-pill tag-default">javascript</a>
          <a href="" class="tag-pill tag-default">emberjs</a>
          <a href="" class="tag-pill tag-default">angularjs</a>
          <a href="" class="tag-pill tag-default">react</a>
          <a href="" class="tag-pill tag-default">mean</a>
          <a href="" class="tag-pill tag-default">node</a>
          <a href="" class="tag-pill tag-default">rails</a>
        </div>
      </div>
    </div>

  </div>
</div>