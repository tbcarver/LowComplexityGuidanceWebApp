            <input type="text" name="userName" class="form-control" value="{{inmate.inmateNumber}}">
        </div>
    </div>
    <div class="form-group row">
        <label for="firstName" class="col-2 col-form-label">First Name</label>
        <div class="col-10">
            <input type="text" name="firstName" class="form-control" value="{{inmate.firstName}}">
        </div>
    </div>
    <div class="form-group row">
        <label for="lastName" class="col-2 col-form-label">Last Name</label>
        <div class="col-10">
            <input type="text" name="lastName" class="form-control" value="{{inmate.lastName}}">
        </div>
    </div>
    <div class="form-group row">
        <label for="housingUnit" class="col-2 col-form-label">Housing Unit</label>
        <div class="col-10">
            <input type="text" name="housingUnit" class="form-control" value="{{inmate.housingUnit}}">
        </div>
    </div>
    <div class="form-group row">
