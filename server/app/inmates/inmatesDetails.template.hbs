    <div class="form-group row">
        <label for="readingScore" class="col-2 col-form-label">Reading Score</label>
        <div class="col-10">
            <input type="text" name="readingScore" class="form-control" value="{{inmate.readingScore}}">
        </div>
    </div>
    <div class="form-group row">
        <label for="mathScore" class="col-2 col-form-label">Math Score</label>
        <div class="col-10">
            <input type="text" name="mathScore" class="form-control" value="{{inmate.mathScore}}">
        </div>
    </div>
    <div class="form-group row">
        <label for="testDate" class="col-2 col-form-label">Test Date</label>
        <div class="col-10">
            <input type="text" name="testDate" class="form-control" value="{{inmate.testDate}}">
        </div>
    </div>
</form>