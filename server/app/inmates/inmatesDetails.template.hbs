        <div class="col-10">
            <input type="text" name="bunk" class="form-control" value="{{inmate.bunk}}">
        </div>
    </div>
    <div class="form-group row">
        <label for="dateGED" class="col-2 col-form-label">GED Date</label>
        <div class="col-10">
            <input type="text" name="dateGED" class="form-control" value="{{inmate.dateGED}}">
        </div>
    </div>
    <div class="form-group row">
        <label for="dateGrad" class="col-2 col-form-label">Graduation Date</label>
        <div class="col-10">
            <input type="text" name="dateGrad" class="form-control" value="{{inmate.dateGrad}}">
        </div>
    </div>
    <div class="form-group row">
        <label for="completedPaperWork" class="col-2 col-form-label">Paper Work Completed</label>
        <div class="col-10">
            <input type="text" name="completedPaperWork" class="form-control" value="{{inmate.completedPaperWork}}">
