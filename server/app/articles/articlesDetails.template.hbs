<div class="jumbotron jumbotron-fluid bg-dark text-light">
	<div class="container">

		<h1><i class="{{article.iconCssClass}}"></i> {{article.articleTitle}}</h1>

      <div class="font-size-sm">
        <a href="">{{article.firstName}} {{article.lastName}}</a>
        <span class="text-muted float-right">{{date article.updatedTimestamp}}</span>
      </div>


			{{#is authorId user.userId }}

			<span>
				<a href="/editor/ias-incidunt-labore-pariatur-q-s0xeh7" class="btn btn-sm btn-outline-secondary">
					<i class="fa fa-pencil"></i> Edit Article
				</a>
				<button class="btn btn-sm btn-outline-danger">
					<i class="fa fa-trash"></i> Delete Article
				</button>
			</span>

			{{else}}

			<button class="btn btn-sm btn-outline-secondary">
				<i class="ion-plus-round"></i>

				Follow Eric Simons <span class="counter">(10)</span>
			</button>

			<button class="btn btn-sm btn-outline-primary">
				<i class="fa fa-heart"></i>Favorite Post <span class="counter">(29)</span>
			</button>

			{{/is}}




	</div>
</div>

<div class="container page">

	<div class="row article-content">
		<div class="col-md-12">
			{{#markdown}}{{article.articleBody}}{{/markdown}}
		</div>
	</div>

	<hr>

	<div class="article-actions">
		<div class="article-meta">
			<a href="profile.html"><img src="http://i.imgur.com/Qr71crq.jpg" /></a>
			<div class="info">
				<a href="" class="author">Eric Simons</a>
				<span class="date">January 20th</span>
			</div>

			<button class="btn btn-sm btn-outline-secondary">
				<i class="ion-plus-round"></i>

				Follow Eric Simons <span class="counter">(10)</span>
			</button>

			<button class="btn btn-sm btn-outline-primary">
				<i class="ion-heart"></i>

				Favorite Post <span class="counter">(29)</span>
			</button>
		</div>
	</div>

	<div class="row">

		<div class="col-xs-12 col-md-8 offset-md-2">

			<form class="card comment-form">
				<div class="card-block">
					<textarea class="form-control" placeholder="Write a comment..." rows="3"></textarea>
				</div>
				<div class="card-footer">
					<img src="http://i.imgur.com/Qr71crq.jpg" class="comment-author-img" />
					<button class="btn btn-sm btn-primary">
						Post Comment
					</button>
				</div>
			</form>

			<div class="card">
				<div class="card-block">
					<p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
				</div>
				<div class="card-footer">
					<a href="" class="comment-author">
						<img src="http://i.imgur.com/Qr71crq.jpg" class="comment-author-img" />
					</a>

					<a href="" class="comment-author">Jacob Schmidt</a>
					<span class="date-posted">Dec 29th</span>
				</div>
			</div>

			<div class="card">
				<div class="card-block">
					<p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
				</div>
				<div class="card-footer">
					<a href="" class="comment-author">
						<img src="http://i.imgur.com/Qr71crq.jpg" class="comment-author-img" />
					</a>

					<a href="" class="comment-author">Jacob Schmidt</a>
					<span class="date-posted">Dec 29th</span>
					<span class="mod-options">
						<i class="ion-edit"></i>
						<i class="ion-trash-a"></i>
					</span>
				</div>
			</div>

		</div>

	</div>

</div>