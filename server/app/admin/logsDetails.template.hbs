<div class="container mt-3">
	<div class="row">
		<div class="col">

			<div class="form-group row">
				<label class="col-sm-4 col-form-label">ID</label>
				<div class="col-sm-8">
					<span class="form-control-text">{{userId}}</span>
					<input type="hidden" name="userId" value="{{userId}}">
				</div>
			</div>
			<div class="form-group row">
				<label for="name" class="col-sm-4 col-form-label">Name</label>
				<div class="col-sm-8">
					<input type="text" class="form-control" name="name" required value="{{name}}">
				</div>
			</div>
			<div class="form-group row">
				<label for="email" class="col-sm-4 col-form-label">Email</label>
				<div class="col-sm-8">
					<input type="email" class="form-control" name="email" required value="{{email}}">
				</div>
			</div>
			<fieldset class="form-group">
				<div class="row">
					<legend class="col-sm-4 col-form-label">Gender</legend>
					<div class="col-sm-8">
						<div class="form-check">
							<input class="form-check-input" type="radio" id="genderMale" name="gender" required
								value="male" {{addAttributeNameByCompare "checked" "male" gender}}>
							<label class="form-check-label" for="genderMale">
								<i class="fa fa-male"></i> Male
							</label>
						</div>
						<div class="form-check">
							<input class="form-check-input" type="radio" id="genderFemale" name="gender" required
								value="female" {{addAttributeNameByCompare "checked" "female" gender}}>
							<label class="form-check-label" for="genderFemale">
								<i class="fa fa-female"></i> Female
							</label>
						</div>
					</div>
				</div>
			</fieldset>
			<div class="form-group row">
				<label for="age" class="col-sm-4 col-form-label">Age</label>
				<div class="col-sm-8">
					<input type="number" class="form-control" name="age" required value="{{age}}">
				</div>
			</div>
			<div class="form-group row">
				<label for="role" class="col-sm-4 col-form-label">Role</label>
				<div class="col-sm-8">
					<select class="form-control" name="role" required>
						<option {{addAttributeNameByCompare "selected" "user" role}} value="user">User</option>
						<option {{addAttributeNameByCompare "selected" "contributor" role}} value="contributor">
							Contributor</option>
						<option {{addAttributeNameByCompare "selected" "administrator" role}} value="administrator">
							Administrator</option>
					</select>
				</div>
			</div>
			<div class="form-group row">
				<div class="col-sm-4 col-form-label">Verified</div>
				<div class="col-sm-8">
					<div class="form-check form-control-text">
						<input class="form-check-input" type="checkbox" id="verified" name="verified"
							{{addAttributeNameByBoolean "checked" verified}}>
						<label class="form-check-label" for="verified">
							Has been verified
						</label>
					</div>
				</div>
			</div>
			<div class="form-group row">
				<label class="col-sm-4 col-form-label">Created Date</label>
				<div class="col-sm-8">
					<span class="form-control-text">{{formatDate createdDate}}</span>
				</div>
			</div>
			<div class="form-group row">
				<label class="col-sm-4 col-form-label">Updated Date</label>
				<div class="col-sm-8">
					<span class="form-control-text">{{formatDate updatedDate}}</span>
				</div>
			</div>
			<div class="form-group row mt-4">
				<div class="col-sm-4">
					<button id="newButton" type="button" class="btn btn-outline-primary"><i
							class="fa fa-plus mr-2"></i>New User</button>
				</div>
				<div class="col-sm-8 text-right">
					<button id="saveButton" type="submit" class="btn btn-primary mr-1"><i
							class="fa fa-check mr-2"></i>Save</button>
					<button id="cancelEditButton" type="button" class="btn btn-outline-danger"><i
							class="fa fa-times mr-2"></i>Cancel</button>
				</div>
			</div>

		</div>
	</div>
</div>