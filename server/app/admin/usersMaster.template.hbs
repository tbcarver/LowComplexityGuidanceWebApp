<div class="container mt-3">
    <div class="row">
        <div class="col">
            <h1>Users</h1>
        </div>
    </div>
</div>


<div class="bg-primary mt-3">
    <div class="container">
        <div class="row">
            <div class="col">

                <form action="/user/edit/%d">
                    <div class="input-group py-3">
                        <core-typeahead class="form-control" placeholder="Search users" type="form"
                            suggestion-name="User" prefetch-url="/api/users/typeahead/prefetch"
                            remote-url="/api/users/typeahead/remote?q=searchTerm"></core-typeahead>
                        <div class="input-group-append">
                            <button class="btn btn-secondary btn-large">
                                <i class="fa fa-search" aria-hidden="true"></i>
                                <span class="ml-1">Search</span>
                            </button>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>


<div class="container mt-3">
    <div class="row">
        <div class="col">

            <table class="table mt-3">
                <thead>
                    <tr>
                        <th class="text-center">First Name</th>
                        <th class="text-center">Last Name</th>
                        <th class="text-center">Username</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {{#each users}}
                    <tr>
                        <td class="text-center">{{firstName}}</td>
                        <td class="text-center">{{lastName}}</td>
                        <td class="text-center">{{username}}</td>
                        <td><a href="/user/edit/{{userId}}" data-route-link><i class="fa fa-pencil"></i></a></td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>

        </div>
    </div>
</div>