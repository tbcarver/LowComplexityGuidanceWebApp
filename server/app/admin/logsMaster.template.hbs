<h1>Logs</h1>

<table id="" class="table mt-3">
	<thead>
		<tr>
			<th class="">Level</th>
			<th class="text-center">Date</th>
			<th class="text-center">Message<i class="far fa-comment text-muted"></i></th>
			<th class="text-center text-muted">Status</th>
			<th class="text-center text-muted">Url</th>
			<th class="text-center text-muted"><i class="fa fa-user"></i>Username</th>
		</tr>
	</thead>
	<tbody>
		{{#each pagedLogs.logs}}
		<tr>
			<td><a href="/log/{{logId}}" class="{{addNameByCompare "text-danger" "error" logLevel}}">{{logLevel}}</a>
			</td>
			<td class="text-center">{{formatDateTimeShort createdTimestamp}}</td>
			<td class="" title="{{stack}}">{{logMessage}}</td>
			<td class="text-center">{{httpStatus}}</td>
			<td class="text-center">{{requestUrl}}</td>
			<td class="text-center">{{username}}</td>
		</tr>
		{{/each}}
	</tbody>
</table>

<core-pagination pagination-data="{{stringify pagedLogs.pagination}}"></core-pagination>